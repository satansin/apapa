<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.satansin.android.apapa"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.satansin.android.apapa.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.satansin.android.apapa.ChatActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName="com.satansin.android.apapa.MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.satansin.android.apapa.MainActivity" />
        </activity>
        <activity
            android:name="com.satansin.android.apapa.FindFriendActivity"
            android:label="@string/title_activity_find_friend"
            android:parentActivityName="com.satansin.android.apapa.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.satansin.android.apapa.MainActivity" />
        </activity>
    </application>

</manifest>
